<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.checklist.ChecklistActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chklist_top"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:background="@drawable/info_bg_checklist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/chklist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/chklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/how_to_checklist"
            android:textAppearance="@style/Body1"
            android:textColor="@color/gray600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/chklist_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginStart="24dp"
            android:text="@string/info_chk_title"
            android:textColor="@color/gray600"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chklist_con"
            android:layout_width="287dp"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/info_chk_contents"
            android:textColor="@color/gray600"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="16sp"
            android:textAppearance="@style/Body1_26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chklist_not" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/chklist_tab"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chklist_top"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabTextColor="@color/gray400"
        android:background="#00FFFFFF"
        app:tabSelectedTextColor="@color/gray600"
        app:tabTextAppearance="@style/Body1"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/chklist_tabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/chklist_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chklist_space"/>

    <Space
        android:id="@+id/chklist_space"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        app:layout_constraintTop_toBottomOf="@id/chklist_tabContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>