<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sos.SosFragment">

    <LinearLayout
        android:id="@+id/myAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/gps_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="16sp"
            android:lines="1"
            android:text="서울특별시"
            android:textColor="@color/black"
            app:drawableStartCompat="@drawable/sos_img_sos_gps" />

    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myAddress">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_select_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:text="@string/sos_txt_select_num"
                android:textColor="@color/gray600"
                android:textFontWeight="900"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_119"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/sos_btn_119_custom"
                android:contentDescription="@string/sos_btn_119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_select_num"
                app:layout_constraintBottom_toTopOf="@id/btn_112"/>

            <ImageButton
                android:id="@+id/btn_112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/sos_btn_112_custom"
                android:contentDescription="@string/sos_btn_112"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_119"
                app:layout_constraintBottom_toTopOf="@id/btn_fav"/>

            <ImageButton
                android:id="@+id/btn_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/sos_btn_fav_custom"
                android:contentDescription="@string/sos_btn_fav"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_112"
                app:layout_constraintBottom_toTopOf="@id/txt_sms_start" />

            <TextView
                android:id="@+id/txt_sms_start"
                android:layout_width="211dp"
                android:layout_height="17dp"
                android:layout_marginTop="35dp"
                android:drawablePadding="5dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:text="@string/sos_txt_sms"
                android:textColor="@color/gray400"
                android:textFontWeight="400"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_fav"
                app:layout_constraintBottom_toTopOf="@id/img_sms_guide"
                app:drawableStartCompat="@drawable/sos_img_sms" />

            <ImageView
                android:id="@+id/img_sms_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:contentDescription="@string/sos_img_sms"
                android:background="@drawable/sos_img_sms_ex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_sms_start"
                app:layout_constraintBottom_toTopOf="@id/txt_amb" />

            <TextView
                android:id="@+id/txt_sms"
                android:layout_width="210dp"
                android:layout_height="75dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:gravity="start"
                android:textColor="#1B6DB1"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/img_sms_guide"
                app:layout_constraintTop_toTopOf="@id/img_sms_guide"
                app:layout_constraintBottom_toBottomOf="@id/img_sms_guide"/>

            <TextView
                android:id="@+id/txt_amb"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:text="@string/sos_txt_amb"
                android:textColor="@color/gray400"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_sms_guide"
                app:layout_constraintBottom_toTopOf="@id/btn_amb"/>

            <ImageButton
                android:id="@+id/btn_amb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/sos_btn_amb_num"
                android:contentDescription="@string/sos_btn_amb"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_amb"
                app:layout_constraintBottom_toTopOf="@id/space_btm"/>

            <Space
                android:id="@+id/space_btm"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_amb"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
