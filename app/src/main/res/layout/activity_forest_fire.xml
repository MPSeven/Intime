<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/forestFire_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:titleCentered="true"
        app:titleEnabled="true"
        android:gravity="center"
        android:padding="0dp"
        app:titleTextAppearance="@style/Body1"
        tools:text = "재난상황 대처 방법"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_bar_design"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:contentDescription="@string/info_iv_bar_design"
        android:src="@drawable/info_iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forestFire_appbar" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding">

            <TextView
                android:id="@+id/info_tv_forestfire_header"
                style="@style/disaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:text="@string/info_tb_forrestfire" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="66dp" />

            <ImageView
                android:id="@+id/info_btn_prevention"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:contentDescription="@string/info_tv_prevention"
                android:src="@drawable/info_btn_prevention" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/info_tv_forestfire_body1"
                style="@style/disaster_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_tv_forestfire_body1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="88dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:src="@drawable/info_btn_whenoccur" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/info_tv_forestfire_body2"
                style="@style/disaster_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_tv_forrestfire_body2"
                android:layout_marginBottom="200dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>