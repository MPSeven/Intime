<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/flood_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:titleCentered="true"
        app:titleEnabled="true"
        android:gravity="center"
        android:padding="0dp"
        app:titleTextAppearance="@style/Body1"
        tools:text = "재난상황 대처 방법"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </com.google.android.material.appbar.MaterialToolbar>
    <ImageView
        android:id="@+id/iv_bar_design"
        android:contentDescription="@string/info_iv_bar_design"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@id/flood_appbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/info_iv_bar_design"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding">
            <TextView
                android:id="@+id/info_tv_flood_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center_vertical"
                style="@style/disaster"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:text="@string/info_tb_flood"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="66dp"/>
            <ImageView
                android:id="@+id/info_btn_whenoccur"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:src="@drawable/info_btn_whenoccur"
                android:contentDescription="@string/info_tv_whenoccur"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>
            <TextView
                android:id="@+id/info_tv_flood_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/disaster_body"
                android:text="@string/info_tv_flood_body"
                android:layout_marginBottom="200dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>