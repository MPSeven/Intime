<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_aed_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/info_aed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/info_aed_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/how_to_aed"
            android:textAppearance="@style/Body1"
            android:textColor="@color/gray600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/info_aed_layout"
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_aed_top">


        <LinearLayout
            android:id="@+id/info_aed_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Space
                android:id="@+id/layout_space"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:layout_constraintTop_toBottomOf="@id/info_aed_layout"/>

            <ImageView
                android:id="@+id/iv_aed_picture"
                android:layout_width="133dp"
                android:layout_height="131dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/info_aed_picture"
                android:src="@drawable/info_iv_aed_picture" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="46dp"/>

            <TextView
                android:id="@+id/info_aed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/info_aed_title"
                android:textAppearance="@style/Head0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/info_aed_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/info_aed_description"
                android:textAppearance="@style/Body1_26"
                android:lineSpacingExtra="6sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <ImageView
                android:id="@+id/iv_bar_design"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/info_iv_bar_design"
                android:src="@drawable/info_iv_bar_design"
                android:layout_weight="1"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

            <TextView
                android:id="@+id/info_aed_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:text="@string/info_aed_subtitle"
                android:textAppearance="@style/Head0" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <LinearLayout
                    android:id="@+id/info_iv_aed_desc_number"
                    android:layout_width="24dp"
                    android:layout_height="1118dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/info_iv_aed_desc_number">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="190dp"
                        android:contentDescription="@string/ellipseOne"
                        android:src="@drawable/ic_ellipse_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="388dp"
                        android:contentDescription="@string/ellipseTwo"
                        android:src="@drawable/ic_ellipse_2" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="444dp"
                        android:contentDescription="@string/disclaimer"
                        android:src="@drawable/ic_disclaimer" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/ellipseThree"
                        android:src="@drawable/ic_ellipse_3" />
                </LinearLayout>
                <Space
                    android:layout_width="12dp"
                    android:layout_height="1181dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/info_tv_aed_step1_header"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="@string/info_tv_aed_step1_header"
                        android:textAppearance="@style/Head3"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="32dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step1"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_aed_step1"
                        android:textAppearance="@style/Body1_26"
                        android:lineSpacingExtra="6sp"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="82dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2_header"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="@string/info_tv_aed_step2_header"
                        android:textAppearance="@style/Head3"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="32dp"/>
                    <ImageView
                        android:id="@+id/info_iv_aed_pad_picture"
                        android:contentDescription="@string/info_tv_aed_step2_header"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:src="@drawable/info_iv_aed_pad_picture"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_pad_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:text="@string/info_tv_aed_pad_desc"
                        android:textAppearance="@style/Body1_26"
                        android:textColor="@color/red"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:text="@string/info_tv_aed_step2"
                        android:textAppearance="@style/Body1_26"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="82dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2warning_header"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="@string/info_tv_aed_step2warning_header"
                        android:textAppearance="@style/Head3"/>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2warning1"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_aed_step2warning1"
                        android:textAppearance="@style/Body1_26"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="24dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2warning2"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:text="@string/info_tv_aed_step2warning2"
                        android:textAppearance="@style/Body1_26"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="24dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2warning3"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_aed_step2warning3"
                        android:textAppearance="@style/Body1_26"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="24dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step2warning4"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:text="@string/info_tv_aed_step2warning4"
                        android:textAppearance="@style/Body1_26"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="82dp"/>
                    <TextView
                        android:id="@+id/info_aed_step3_header"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="@string/info_tv_aed_step3_header"
                        android:textAppearance="@style/Head3" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="14dp"/>
                    <ImageView
                        android:id="@+id/info_iv_aed_compression_picture"
                        android:contentDescription="@string/info_iv_aed_compression_picture"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:src="@drawable/info_iv_aed_compression_picture"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step3"
                        android:layout_width="wrap_content"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_aed_step3"
                        android:textAppearance="@style/Body1_26"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                    <TextView
                        android:id="@+id/info_tv_cpr_clickable"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:text="@string/info_tv_cpr_clickable"
                        android:textAppearance="@style/Body1_26"
                        android:textColor="#1874C1"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="33dp"/>
                    <TextView
                        android:id="@+id/info_tv_aed_step3reminder"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:text="@string/info_tv_aed_step3reminder"
                        android:textAppearance="@style/Body1_26"
                        android:textColor="@color/red"
                        />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="56dp"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/info_iv_copyright"
                android:contentDescription="@string/info_iv_copyright"
                android:layout_width="341dp"
                android:layout_height="14dp"
                android:text="@string/info_iv_copyright"
                android:layout_gravity="center_horizontal" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="49dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>