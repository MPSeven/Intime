<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_sos_amb"
    tools:context=".sos.SosAmbFragment">

    <TextView
        android:id="@+id/amd_loc"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="32dp"
        android:text="전체"
        android:textColor="@color/black"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textSize="16sp"
        android:drawableEnd="@drawable/sos_btn_loc"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Space
        android:id="@+id/amb_space"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toBottomOf="@id/amd_loc"
        app:layout_constraintBottom_toTopOf="@id/amb_recycler_view" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/amb_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amb_space"
        app:layout_constraintBottom_toTopOf="@id/amb_notice"
        tools:listitem="@layout/ambulance_list"/>

    <TextView
        android:id="@+id/amb_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="29dp"
        android:layout_marginTop="24dp"
        android:text="@string/sos_amb_notice"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amb_recycler_view"/>

</androidx.constraintlayout.widget.ConstraintLayout>