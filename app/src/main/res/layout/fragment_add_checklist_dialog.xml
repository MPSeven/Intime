<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_bg_chk"
    tools:context=".info.checklist.AddChecklistDialogFragment" >

    <EditText
        android:id="@+id/ch_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:inputType="text"
        android:maxLength="20"
        android:hint="내용을 입력하세요."
        android:textSize="20dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textFontWeight="900"
        android:textColor="@color/gray600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ch_add_con"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:inputType="none"
        android:maxLength="100"
        android:background="@null"
        android:hint="메모를 입력하세요."
        android:gravity="top"
        android:textColor="@color/gray600"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_add_title"/>

    <ImageButton
        android:id="@+id/ch_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp"
        android:src="@drawable/setting_btn_x"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_add_con"/>

    <ImageButton
        android:id="@+id/ch_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="17dp"
        android:src="@drawable/info_btn_chkadd"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_x" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_confirm"/>
</androidx.constraintlayout.widget.ConstraintLayout>