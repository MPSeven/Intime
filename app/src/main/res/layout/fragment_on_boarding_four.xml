<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    tools:context=".onboarding.OnBoardingFour">


    <ImageView
        android:id="@+id/onBoarding_iv4"
        android:layout_width="200dp"
        android:layout_height="197dp"
        android:layout_marginTop="91dp"
        android:contentDescription="@string/info_iv_aed_compression_picture"
        android:src="@drawable/onboarding_iv_backpack_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/onBoarding_tv_slide_header4"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="10sp"
        android:text="@string/tv_onBoarding4h"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="24sp"
        android:translationY="-4.8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onBoarding_iv4" />

    <TextView
        android:id="@+id/onBoarding_tv_slide_body4"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="top"
        android:letterSpacing="-0.02"
        android:lineHeight="29sp"
        android:lineSpacingExtra="7sp"
        android:text="@string/tv_onBoarding4b"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="18sp"
        android:translationY="-3.6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onBoarding_tv_slide_header4" />

<!--    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/onBoarding_tv_slide_body4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />-->
    <ImageButton
        android:id="@+id/onboarding_ib_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:contentDescription="@string/onboarding_ib_start"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:src="@drawable/onboarding_iv_start_button" />

</androidx.constraintlayout.widget.ConstraintLayout>