<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Intime.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:contentDescription="@string/appwidget_text"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:text="@string/appwidget_text"
            android:textColor="@color/gray600"
            android:textFontWeight="900"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/widget_gps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:src="@drawable/widget_gps" />

        <TextView
            android:id="@+id/widget_gps_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="현재위치"
            android:textColor="@color/gray600"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textFontWeight="900"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/widget_currentLoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:text="서울시 마포구 성산동"
            android:textColor="@color/gray600"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textSize="10sp"/>

        <ImageButton
            android:id="@+id/widget_refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/widget_refresh" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widget_119"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/widget_119" />

        <ImageButton
            android:id="@+id/widget_112"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/widget_112" />

        <ImageButton
            android:id="@+id/widget_fav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/widget_fav" />

        <ImageButton
            android:id="@+id/widget_cpr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/widget_cpr" />

    </LinearLayout>

</LinearLayout>