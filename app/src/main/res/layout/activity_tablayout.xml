<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_cpr_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/info_tv_cpr_headline"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h1height"
            android:text="@string/info_tv_cpr_headline"
            android:textAppearance="@style/Head1"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/info_tv_cpr_desc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/b1_double_line"
            android:text="@string/info_tv_cpr_desc"
            android:textAppearance="@style/Body1_26"/>
        <!--default height of google tabs: 48 (70-48)-->
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_cpr_desc"
        app:tabMode="fixed"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabs"
        android:layout_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>