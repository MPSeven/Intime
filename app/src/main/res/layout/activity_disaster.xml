<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".info.DisasterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_dis_top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/info_dis_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/info_dis_toptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/how_to_disaster"
            android:textAppearance="@style/Body1"
            android:textColor="@color/gray600"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_bar_design"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:contentDescription="@string/info_iv_bar_design"
        android:src="@drawable/info_iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/info_dis_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_design">

        <Button
            android:id="@+id/infoTbEarthQuake"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_earthquake"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbTyphoon"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_typhoon"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbFlood"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_flood"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbForrestfire"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_forrestfire"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTBUrbanFire"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_fire"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>