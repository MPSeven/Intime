<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".info.DisasterActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/disaster_appbar"
        android:layout_width="match_parent"
        android:textAlignment="center"
        app:titleCentered="true"
        app:titleEnabled="true"
        android:gravity="center"
        android:padding="0dp"
        tools:text = "재난상황 대처 방법"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_bar_design"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:contentDescription="@string/info_iv_bar_design"
        android:src="@drawable/info_iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/disaster_appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_design">

        <Button
            android:id="@+id/infoTbEarthQuake"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_earthquake"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbTyphoon"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_typhoon"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbFlood"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_flood"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTbForrestfire"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_forrestfire"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <Button
            android:id="@+id/infoTBUrbanFire"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:gravity="left|center_vertical"
            android:letterSpacing="-0.01"
            android:padding="0dp"
            android:text="@string/info_tb_fire"
            android:textColor="@drawable/info_btn_textcolor"
            android:textSize="32sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>