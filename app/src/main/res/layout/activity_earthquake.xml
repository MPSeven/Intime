<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayoutEarthquake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/earthquake_appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textAlignment="center"
        app:titleCentered="true"
        app:titleEnabled="true"
        android:gravity="center"
        android:padding="0dp"
        app:titleTextAppearance="@style/Body1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_bar_design"
        android:contentDescription="@string/info_iv_bar_design"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@id/earthquake_appbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/info_iv_bar_design"/>

    <ScrollView
        android:id="@+id/layout_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_bar_design"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/info_tv_earthquake_header"
                style="@style/disaster"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:gravity="center_vertical"
                android:text="@string/info_tb_earthquake" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="66dp" />

            <ImageView
                android:id="@+id/info_btn_wheninside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/info_tv_wheninside"
                android:src="@drawable/info_btn_wheninside" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/info_tv_earthquake_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:fontFamily="@font/spoqa_han_sans_neo_bold"
                android:gravity="top"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="7sp"
                android:text="@string/info_tv_earthquake_subtitle"
                android:textColor="@color/gray600"
                android:textSize="18sp"
                android:translationY="-3.6sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="23dp" />

            <TextView
                android:id="@+id/info_tv_earthquake_body1"
                style="@style/disaster_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_tv_earthquake_body" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="88dp" />

            <ImageView
                android:id="@+id/info_btn_whenoutside"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:contentDescription="@string/info_tv_whenoutside"
                android:src="@drawable/info_btn_whenoutside" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/info_tv_earthquake_body2"
                style="@style/disaster_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp"
                android:text="@string/info_tv_earthquake_body2" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>