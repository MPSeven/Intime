<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/map_recyclerview_border"
    android:paddingTop="16dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/aedInfoText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aedInfoButton"
        app:layout_constraintHorizontal_weight="1.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/orgShelter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="공덕역" />

        <TextView
            android:id="@+id/addressShelter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:textColor="@color/gray500"
            android:textSize="13sp"
            android:textStyle="normal"
            tools:text="서울특별시 마포구 성산로 128" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addressCategoryShelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5층 로비" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="|" />

            <TextView
                android:id="@+id/distanceShelter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20m" />

        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/aedInfoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/aedInfoText"
        app:layout_constraintTop_toTopOf="parent">

        <android.widget.Button
            android:id="@+id/shelterRecyclerViewCallButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/map_aed_button"
            android:drawableStart="@drawable/map_call_symbol"
            android:paddingLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/shelterRecyclerViewFindPathButton"
            app:layout_constraintTop_toTopOf="parent" />

        <android.widget.Button
            android:id="@+id/shelterRecyclerViewFindPathButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/map_aed_button"
            android:drawableLeft="@drawable/map_find_way"
            android:paddingLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>