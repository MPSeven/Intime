<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_top_radius_white_background"
    android:padding="24dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/infoButton"
        app:layout_constraintHorizontal_weight="1.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/shelterOrgMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="공덕역" />

        <TextView
            android:id="@+id/shelterAddressMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:maxLines="1"
            android:textColor="@color/gray500"
            android:textSize="14sp"
            tools:text="서울특별시 마포구 성산로 128" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shelterCategoryMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/gray500"
                android:textSize="14sp"
                tools:text="5층 로비" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:text="|"
                android:textColor="@color/gray500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/shelterDistanceMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray500"
                android:textSize="14sp"
                tools:text="20m" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoButton"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/infoText"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/bookMarkLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookmark"
                android:textColor="@color/gray400"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/shelterBookMarkButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/map_bookmark_off" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bookMarkLayout"
            app:layout_constraintVertical_weight="4">

            <android.widget.Button
                android:id="@+id/shelterCallNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/map_aed_button"
                android:drawableStart="@drawable/map_call_symbol"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/shelterFindPathButton"
                android:layout_marginEnd="8dp"
                android:paddingLeft="12dp" />

            <android.widget.Button
                android:id="@+id/shelterFindPathButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/map_aed_button"
                android:drawableLeft="@drawable/map_find_way"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingLeft="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>