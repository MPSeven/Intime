<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cpr_basic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_cpr_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        app:layout_constraintLeft_toLeftOf="@id/layout_cpr_basic"
        app:layout_constraintTop_toTopOf="@id/layout_cpr_basic">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/info_tv_cpr_headline"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h1height"
            android:text="@string/info_tv_cpr_headline"
            android:textAppearance="@style/Head1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/info_tv_cpr_desc"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/b1_double_line"
            android:text="@string/info_tv_cpr_desc"
            android:textAppearance="@style/Body1_26" />

        <LinearLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/info_tb_adult"
                style="@style/TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/info_tb_adult" />

            <Space
                android:layout_width="32dp"
                android:layout_height="19dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/info_tb_child"
                style="@style/TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/info_tb_child" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/container_cpr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_cpr_top">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/tabs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <ImageView
                    android:id="@+id/info_iv_cpr_desc_numbering"
                    android:layout_width="24dp"
                    android:layout_height="2340dp"
                    android:contentDescription="@string/info_iv_cpr_desc_numbering"
                    android:src="@drawable/info_iv_cpr_desc_numbering" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="2340dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_tv_cpr_step1_header"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step1_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_step1"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/info_iv_cpr_step1"
                        android:src="@drawable/info_iv_cpr_step1" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="16dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step1_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1_double_line"
                        android:text="@string/info_tv_cpr_step1_1"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step1_2"
                        android:layout_width="match_parent"
                        android:layout_height="19dp"
                        android:text="@string/info_tv_cpr_step1_2"
                        android:textAppearance="@style/Body1"
                        android:textColor="@color/red" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step1_3"
                        android:layout_width="match_parent"
                        android:layout_height="104dp"
                        android:text="@string/info_tv_cpr_step1_3"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step2_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step2_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_step2"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/info_iv_cpr_step2"
                        android:src="@drawable/info_iv_cpr_step2" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step2"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="@string/info_tv_cpr_step2"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step3_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_step3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/info_iv_cpr_step3"
                        android:src="@drawable/info_iv_cpr_step3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step3_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1_double_line"
                        android:text="@string/info_tv_cpr_step3_1"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step3_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1_single_space"
                        android:text="@string/info_tv_cpr_step3_2"
                        android:textAppearance="@style/Body1"
                        android:textColor="@color/red" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step4_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step4_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_step4"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/info_iv_cpr_step4"
                        android:src="@drawable/info_iv_cpr_step4" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step4"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_cpr_step4"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step4_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/b1_double_line"
                        android:text="@string/info_tv_cpr_step4_2"
                        android:textAppearance="@style/Body1_26"
                        android:textColor="@color/red" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step5_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step5_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_step5"
                        android:layout_width="165dp"
                        android:layout_height="140dp"
                        android:contentDescription="@string/info_iv_cpr_step5"
                        android:src="@drawable/info_iv_cpr_step5" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_single_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step5"
                        android:layout_width="match_parent"
                        android:layout_height="156dp"
                        android:text="@string/info_tv_cpr_step5" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step6_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_step6_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_step6"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_cpr_step6"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="81dp" />

                    <TextView
                        android:id="@+id/info_tv_cpr_caution_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h3height"
                        android:text="@string/info_tv_cpr_caution_header"
                        android:textAppearance="@style/Head3" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p_double_space" />

                    <TextView
                        android:id="@+id/info_tv_cpr_caution"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:text="@string/info_tv_cpr_caution"
                        android:textAppearance="@style/Body1_26" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="88dp" />

                    <ImageView
                        android:id="@+id/info_iv_cpr_summary_adult"
                        android:layout_width="match_parent"
                        android:layout_height="398dp"
                        android:contentDescription="@string/info_iv_cpr_summary_adult"
                        android:src="@drawable/info_iv_cpr_summary_adult" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="88dp" />

                    <ImageView
                        android:id="@id/info_iv_copyright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/info_iv_copyright"
                        android:src="@drawable/info_iv_copyright" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="64dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


