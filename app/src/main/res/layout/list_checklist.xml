<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:id="@+id/cb_chk"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:button="@android:color/transparent"
        android:background="@drawable/info_checklist_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/cb_title"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/Body1"
        android:textColor="@color/gray600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_chk"/>

    <TextView
        android:id="@+id/cb_detail"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="22dp"
        android:textAppearance="@style/Body2"
        android:textColor="@color/gray400"
        app:layout_constraintTop_toBottomOf="@id/cb_chk"/>
</androidx.constraintlayout.widget.ConstraintLayout>