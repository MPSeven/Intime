<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/map_recyclerview_border">

    <LinearLayout
        app:layout_constraintHorizontal_weight="1.9"
        android:id="@+id/aedInfoText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/aedInfoButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="공덕역" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:textColor="@color/gray500"
                android:textSize="14sp"
                android:text="|" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray500"
                tools:text="20m" />

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_marginVertical="5dp"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:textColor="@color/gray500"
            android:textSize="14sp"
            tools:text="서울특별시 마포구 성산로 128" />

        <TextView
            android:id="@+id/addressDetail"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/gray500"
            tools:text="5층 로비" />
        
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintHorizontal_weight="1.1"
        android:id="@+id/aedInfoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aedInfoText"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/aedInfoButton1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/findPathLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.widget.Button
                android:id="@+id/recyclerViewCallButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/map_aed_button"
                android:drawableStart="@drawable/map_call_symbol"
                android:paddingLeft="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray400"
                android:text="@string/callAed"
                android:textSize="10sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/findPathLinearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/aedInfoButton1"
            app:layout_constraintTop_toTopOf="parent">

            <android.widget.Button
                android:id="@+id/recyclerViewFindPathButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/map_aed_button"
                android:drawableLeft="@drawable/map_find_way"
                android:paddingLeft="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray400"
                android:text="@string/findPathAed"
                android:textSize="10sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>