<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.go.mapo.intime">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Intime"
        android:usesCleartextTraffic="true"
        android:name=".IntimeApplication">
        <activity android:name=".info.checklist.AddChecklist" />
        <activity android:name=".info.checklist.ChecklistActivity" />
        <activity android:name=".sos.AmbulanceActivity" />

        <receiver android:name=".widget.IntimeWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/intime_widget_info" />
        </receiver>

        <activity
            android:name=".onboarding.SplashScreen"
            android:theme="@style/Theme.Intime.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Under Disaster: -->
        <activity android:name=".info.DisasterActivity"/>
        <activity
            android:name=".info.EarthquakeActivity"
            android:parentActivityName=".info.DisasterActivity" />
        <activity
            android:name=".info.FloodActivity"
            android:parentActivityName=".info.DisasterActivity" />
        <activity
            android:name=".info.TyphoonActivity"
            android:parentActivityName=".info.DisasterActivity" />
        <activity
            android:name=".info.ForestFireActivity"
            android:parentActivityName=".info.DisasterActivity" />
        <activity
            android:name=".info.UrbanFireActivity"
            android:parentActivityName=".info.DisasterActivity" />
        <activity android:name=".info.AedActivity"
            android:theme="@style/Theme.Intime.NoActionBar"/>
        <activity android:name=".info.CprActivity"
            android:theme="@style/Theme.Intime.NoActionBar"/>
        <!-- Settings: -->
        <activity android:name=".setting.SettingAddContact" />
        <activity android:name=".setting.SettingFavoriteActivity" />
        <activity android:name=".setting.SettingContactsActivity" />
        <activity android:name=".setting.SettingActivity" />

        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="3stwx8pka5" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
    </application>

</manifest>